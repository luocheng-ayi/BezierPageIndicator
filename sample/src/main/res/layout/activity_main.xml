<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <com.chrischeng.bezierpageindicator.CirclePageIndicator
        android:id="@+id/pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        app:bpi_circle_normalColor="@android:color/transparent"
        app:bpi_circle_selectedColor="@android:color/white"
        app:bpi_circle_stroke_color="@android:color/white"
        app:bpi_circle_stroke_width="1px" />

</RelativeLayout>
